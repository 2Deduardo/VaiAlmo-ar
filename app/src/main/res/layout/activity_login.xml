<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login" android:background="@android:color/holo_orange_dark">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_Login"
            android:hint="Email"
            android:background="@drawable/rounded_text"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:background="@drawable/rounded_text"
            android:ems="10"
            android:id="@+id/Password_Login"
            android:hint="Password"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            app:layout_constraintEnd_toEndOf="@+id/email_Login"
            app:layout_constraintStart_toStartOf="@+id/email_Login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_Login"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:id="@+id/Login_Button" app:layout_constraintEnd_toEndOf="@+id/Password_Login"
            app:layout_constraintStart_toStartOf="@+id/Password_Login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Password_Login"/>
    <TextView
            android:text="Back to Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Back_Registration" app:layout_constraintEnd_toEndOf="@+id/Login_Button"
            app:layout_constraintStart_toStartOf="@+id/Login_Button"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>